{
  "ConnectionStrings": {
    "ABBConnection": "Data Source=localhost;Initial Catalog=abb_h2h;Integrated Security=True;"
  },
  "ProfilePictureFolder": "/img/profile-picture/",
  "FileFolder": "/files/",
  "MaxAccessFailedCount": 10,
  "Administrator": {
    "Username": "admin",
    "Password": "Admin.4ab"
  },
  "Content-Security-Policy": "default-src 'self';media-src *; style-src 'self' 'unsafe-inline' fonts.googleapis.com code.ionicframework.com;script-src 'self' 'unsafe-eval' 'unsafe-inline' maps.google.com maps.googleapis.com;font-src  'self' fonts.gstatic.com code.ionicframework.com;  img-src * data: blob: 'unsafe-inline'; connect-src 'self' ws:; frame-src * blob:",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {

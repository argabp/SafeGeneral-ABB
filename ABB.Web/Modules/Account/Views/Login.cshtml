@model ABB.Web.Modules.Account.Models.LoginModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "~/Modules/Shared/_FrontLayout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }

    .field-validation-error {
        margin: 5px;
    }

    .login-logo-image{
            float: left;
            line-height: .8;
            margin-left: 0.8rem;
            margin-right: 0.5rem;
            margin-top: -3px;
            max-height: 150px;
            width: auto;
            padding-top: 1.5em;
            padding-bottom: 1.5em;
        }
</style>
<div class="login-box" style="width: 440px">
    <div>
        <p style="text-align: center; margin-bottom: 0">
            <strong style="font-size: 2.2rem; font-family: 'Open Sans'; letter-spacing: 5px">SIAT</strong>
        </p>
    </div>
    <div class="card card-outline card-primary">
        <div class="card-header text-center">
            <img src="/img/Logo-Login.png" alt="ABB Logo" class="login-logo-image">
        </div>
        <div class="card-body login-card-body">
            @* <form id="SignInForm" enctype="multipart/form-data"> *@
            <form method="post" autocomplete="off" id="LoginForm">
                <div class="input-group mb-3">
                    <input asp-for="Username" type="text" class="form-control" placeholder="Username" onblur="getUserDatabase()"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Password"/>
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="input-group mb-3">
                    <select class="form-control select2" name="UserDatabase" id="UserDatabase" style="width: 100%;">
                        <option>Pilih Cabang</option>
                    </select>
                </div>
                <div class="mb-3">
                    <span asp-validation-for="UserDatabase" class="text-danger"></span>
                </div>
                <div class="col-12" style="padding: 0px">
                    <button type="submit" class="btn btn-primary login-btn">Sign In</button>
                    @* <button id="SignIn" type="button"class="btn btn-primary btn-block">Sign In</button> *@
                </div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
<input type="hidden" id="show-success-message" value="@ViewData["ShowSuccessMessage"]"/>

<script src="~/Modules/Account/JS/account.login.js"></script>
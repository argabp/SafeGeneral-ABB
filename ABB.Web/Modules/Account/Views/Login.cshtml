@model ABB.Web.Modules.Account.Models.LoginModel

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "~/Modules/Shared/_FrontLayout.cshtml";
}

<style>
    .text-danger {
        color: red;
    }

    .field-validation-error {
        margin: 5px;
    }

    .new-logo-image{
            float: left;
            line-height: .8;
            margin-left: 0.8rem;
            margin-right: 0.5rem;
            margin-top: -3px;
            max-height: 150px;
            width: auto;
            padding-top: 1.5em;
            padding-bottom: 1.5em;
        }

    .login-logo-image {
        max-height: 200px;
        width: auto;
    }
    
    /* Mobile */
    @@media (max-width: 768px) {
    .login-logo-image {
        max-height: 80px;
        margin-bottom: 30px;
    }
    }
</style>
<div class="container-fluid h-100 p-0">
    <div class="row h-100 g-0">
        <div class="login-panel col-lg-5 d-block" style="
    display: flex;
    flex-direction: column;
    min-height: 100vh;
">
            <div class="text-center">
                <img src="/img/new_logo_login.png" alt="ABB Logo" class="login-logo-image">
            </div>
            <div class="login-body">
                <form method="post" autocomplete="off" id="LoginForm">
                    <div class="login-Title input-group" style="text-align: left; margin: 0">
                        <p style="margin: 0px">Hi, Welcome back to SIABB</p>
                        <p>Core Insurance</p>
                    </div>
                    <div class="input-group mb-3">
                        <input asp-for="Username" type="text" class="form-control" placeholder="Username" onblur="getUserDatabase()"/>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password"  />
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-3">
                        <select class="form-control select2" name="UserDatabase" id="UserDatabase" style="width: 100%;">
                            <option>Pilih Cabang</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <span asp-validation-for="UserDatabase" class="text-danger"></span>
                    </div>
                    <div class="col-12" style="padding: 0px">
                        <button type="submit" class="btn btn-primary login-btn">Sign In</button>
                        @* <button id="SignIn" type="button"class="btn btn-primary btn-block">Sign In</button> *@
                    </div>
                </form>
            </div>
            <p style="text-align: center;">
                <strong>Copyright © 2025 PT. Asuransi Bhakti Bhayangkara.</strong>
                All rights reserved.
            </p>
        </div>
        <div class="login-image col-lg-7 d-none d-lg-block">
        </div>
    </div>
</div>
<input type="hidden" id="show-success-message" value="@ViewData["ShowSuccessMessage"]"/>

<script src="~/Modules/Account/JS/account.login.js"></script>
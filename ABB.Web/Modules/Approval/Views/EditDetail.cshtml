@using Kendo.Mvc.UI
@model ABB.Web.Modules.Approval.Models.ApprovalDetailViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@addTagHelper *, ABB.Web

<div class="window-body" style="background-color: lightgray">
    <form id="ApprovalDetailForm" enctype="multipart/form-data" autocomplete="off">
        @Html.HiddenFor(p => p.kd_cb)
        @Html.HiddenFor(p => p.kd_cob)
        @Html.HiddenFor(p => p.kd_scob)
        <div class="form-group col-sm-12">
            <label class="col-sm-12">User</label>
            <div class="col-sm-12">
                <kendo-dropdownlist for="kd_user" style="width: 100%" class="primary-dropdown" readonly="true"
                                    datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                    <datasource type="DataSourceTagHelperType.Custom">
                        <transport>
                            <read url="@Url.Action("GetKodeUserSign", "Approval")"/>
                        </transport>
                    </datasource>
                </kendo-dropdownlist>
                <span asp-validation-for="kd_user" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">Kode Status</label>
            <div class="col-sm-12">
                <kendo-dropdownlist for="kd_status" style="width: 100%" class="primary-dropdown" readonly="true"
                                    datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                    <datasource type="DataSourceTagHelperType.Custom">
                        <transport>
                            <read url="@Url.Action("GetKodeStatus", "Approval")"/>
                        </transport>
                    </datasource>
                </kendo-dropdownlist>
                <span asp-validation-for="kd_status" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">User Sign</label>
            <div class="col-sm-12">
                <kendo-dropdownlist for="kd_user_sign" style="width: 100%" class="primary-dropdown" readonly="true"
                                    datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                    <datasource type="DataSourceTagHelperType.Custom">
                        <transport>
                            <read url="@Url.Action("GetKodeUserSign", "Approval")"/>
                        </transport>
                    </datasource>
                </kendo-dropdownlist>
                <span asp-validation-for="kd_user_sign" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">SLA</label>
            <div class="col-sm-12">
                <kendo-numerictextbox for="sla" style="width: 100%; background-color: #FFFFE1"/>
                <span asp-validation-for="sla" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

<div class="window-footer">
    <button type="button" onclick="onEditApprovalDetail()" class="btn btn-success space-right">
        <span class="fa fa-save"></span> Save
    </button>
</div>
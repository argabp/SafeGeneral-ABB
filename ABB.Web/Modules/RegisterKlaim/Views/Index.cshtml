@using ABB.Application.RegisterKlaims.Queries
@using Kendo.Mvc.TagHelpers
@using Kendo.Mvc.UI
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register Klaim";
}
<script src="~/Modules/RegisterKlaim/JS/registerKlaim.index.js"></script>

<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-6">
            Register Klaim
        </div>
        <input type="hidden" id="KodeCabang" value="@ViewBag.KodeCabang">
        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>
        <div class="col-md-2">
            <button class="flat-btn-primary" id="btnAddNewRegisterKlaim">Add Register Klaim</button>
        </div>
    </div>

    <div class="flat-box-content">
        @(Html.Kendo().Grid<RegisterKlaimDto>()
        .Name("RegisterKlaimGrid")
        .DataSource(dataSource => dataSource.Ajax()
            .Read(read => read.Action("GetRegisterKlaims", "RegisterKlaim").Data("searchFilter"))
        )
        .Columns(columns =>
        {
            columns.Command(command =>
            {
                command.Custom("Edit")
                    .Text(" Edit")
                    .IconClass("fa fa-pencil-alt")
                    .HtmlAttributes(new { title = "Edit" })
                    .Click("OnClickEditRegisterKlaim");
                // command.Custom("View")
                //     .Text(" ")
                //     .IconClass("fa fa-eye")
                //     .HtmlAttributes(new { title = "View" })
                //     .Click("OnClickViewPengajuanAkseptasi");
                // command.Custom("Info")
                //     .Text(" ")
                //     .IconClass("fa fa-info-circle")
                //     .HtmlAttributes(new { title = "Info" })
                //     .Click("OnClickInfoPengajuanAkseptasi");
                // command.Custom("Submit")
                //     .Text(" ")
                //     .IconClass("fa fa-location-arrow")
                //     .HtmlAttributes(new { title = "Submit" })
                //     .Click("OnClickSubmitPengajuanAkseptasi");
                // command.Custom("BatalAkseptasi")
                //     .Text(" ")
                //     .IconClass("fa fa-ban")
                //     .HtmlAttributes(new { title = "Batal Akseptasi" })
                //     .Click("OnClickBatalAkseptasiPengajuanAkseptasi");
                command.Custom("Print")
                    .Text(" Print")
                    .IconClass("fa fa-print")
                    .HtmlAttributes(new { title = "Print" })
                    .Click("OnClickPrintPengajuanKlaim");
            }).Title("Action").Width(200).Locked(true);
            columns.Bound(col => col.Id).Hidden();
            columns.Bound(col => col.nm_cb).Title("Cabang");
            columns.Bound(col => col.nm_cob).Title("COB");
            columns.Bound(col => col.nm_scob).Title("SCOB");
            columns.Bound(col => col.no_pol_lama).Width(250).Title("Nomor Polis").ClientTemplate("#= formatNoPol(no_pol_lama) #");
            columns.Bound(col => col.register_klaim).Title("Nomor Berkas");
            columns.Bound(col => col.nm_ttg).Title("Nama Tertanggung");
            columns.Bound(col => col.sebab_kerugian).Title("Sebab Klaim");
            columns.Bound(col => col.tgl_kej).Title("Tanggal Kejadian").Format("{0: dd-MM-yyyy}");
            columns.Bound(col => col.tgl_lapor).Title("Tanggal Lapor").Format("{0: dd-MM-yyyy}");
            columns.Bound(col => col.tgl_reg).Title("Tanggal Register").Format("{0: dd-MM-yyyy}");
        })
        .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                    )
        .Sortable()
        .Filterable()
        .Scrollable()
        .Height(380)
        .Resizable(a=>a.Columns(true))
        .Events(ev => ev.DataBound("gridAutoFit"))
    
            )

        @(Html.Kendo().Window()
                    .Name("RegisterKlaimWindow")
                    .Title("Register Klaim Page")
                    .Width(1200)
                    .Modal(true)
                    .Visible(false)
                    .Draggable(true)
            )
        
        @(Html.Kendo().Window()
                    .Name("InfoPengajuanAkseptasiWindow")
                    .Title("Info Pengajuan Akseptasi Page")
                    .Width(1200)
                    .Modal(true)
                    .Visible(false)
                    .Draggable(true)
            )
        
        @(Html.Kendo().Window()
                    .Name("ApprovalWindow")
                    .Title("Approval Page")
                    .Width(1000)
                    .Modal(true)
                    .Visible(false)
                    .Draggable(true)
            )
    </div>
</div>


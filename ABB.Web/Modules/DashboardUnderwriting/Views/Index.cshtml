                        <p style='align-self: center; margin-left:1em; color: white'>@Model.Data[2].nm_status</p>
                        <p style='position:absolute; bottom:0; right:0; font-size:2em; margin-bottom:0px; margin-right:1em; color: white '>@Model.Data[2].jml_data</p>
                    </div>
                </div>
            </section>
            <section class='col-sm-3'>
                <div class='card card-custom' onclick="window.open('@Model.Data[3].url', 'mywindow');" style='cursor: pointer;width:auto; height: 120px; background: #073763'>

                        <p style='position:absolute; bottom:0; right:0; font-size:2em; margin-bottom:0px; margin-right:1em; color: white'>@Model.Data[7].jml_data</p>
                    </div>
                </div>
            </section>
        </div>
    </div>
    
    <div class="card card-default color-palette-box">
        <div class="card-header">
            <p class="card-title" style="width: 100%; text-align: center; font-weight: bold; font-size: 14px;">
                Target dan Realisasi Produksi Umum @ViewBag.DatabaseName
            </p>
            <p class="card-title" style="width: 100%; text-align: right; padding-top: 1em; padding-right: 1em; font-size: 15px;">
                @DateTime.Now
            </p>
        </div>
        
        <div class="row" style=" justify-content: space-between">
            <div style="width: 42.5%; margin-left: 1em">
                <table class="table">
                    <thead>
                    <tr>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-left: 1px solid #5B7595;">Total Target</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595;">Total Produksi</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-right: 1px solid #5B7595;">Rasio</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="border-bottom: 1px solid #5B7595; border-left: 1px solid #5B7595;" id="target_rkap"></td>
                        <td style="border-bottom: 1px solid #5B7595;" class="produksi_sdthnini"></td>
                        <td style="border-bottom: 1px solid #5B7595; border-right: 1px solid #5B7595;" id="rasio"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
            
            <div style="width: 55%; margin-right: 1em">
                <table class="table">
                    <thead>
                    <tr>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-left: 1px solid #5B7595;">Total Produksi s/d Tahun ini</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595;">Total Produksi s/d Tahun lalu</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-right: 1px solid #5B7595;">Naik (Turun)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="border-bottom: 1px solid #5B7595; border-left: 1px solid #5B7595;" class="produksi_sdthnini"></td>
                        <td style="border-bottom: 1px solid #5B7595;" id="produksi_sdthnlalu"></td>
                        <td style="border-bottom: 1px solid #5B7595; border-right: 1px solid #5B7595;" id="produksi_naikTurunPerTahun"></td>
                    </tr>
                    </tbody>
                </table>
                
                <table class="table">
                    <thead>
                    <tr>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-left: 1px solid #5B7595;">Total Produksi Bulan Ini</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595;">Total Produksi Bulan lalu</th>
                        <th style="border-bottom: 1px solid #5B7595; border-top: 1px solid #5B7595; border-right: 1px solid #5B7595;">Naik (Turun)</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td style="border-bottom: 1px solid #5B7595; border-left: 1px solid #5B7595;" id="produksi_blnini"></td>
                        <td style="border-bottom: 1px solid #5B7595;" id="produksi_blnlalu"></td>
                        <td style="border-bottom: 1px solid #5B7595; border-right: 1px solid #5B7595;" id="produksi_naikTurunPerBulan"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <input type="hidden" value="@JsonConvert.SerializeObject(Model.Graphic)" id="dashboardData">
        <div id="barChart" class="chart--container"></div>
    </div>
</div>

<div class="container-fluid">
    

                        <p style='align-self: center; margin-left:1em;'>@Model.Data[1].nm_status</p>
                        <p style='position:absolute; bottom:0; right:0; font-size:2em; margin-bottom:0px; margin-right:1em;'>@Model.Data[1].jml_data</p>

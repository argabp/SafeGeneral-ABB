@using Newtonsoft.Json
@model ABB.Application.DashboardUnderwriting.Queries.DashboardUnderwritingDto

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<script src="~/Modules/DashboardUnderwriting/JS/dashboardUnderwriting.js"></script>

<style>
    .chart--container {
      min-height: 550px;
      width: 100%;
      height: 100%;
    }
    .card-custom:hover{
        transform: scale(1.1);
    }
    table{
        text-align: center;
    }
    thead{
        background-color: lightblue;
    }
  </style>

<div class='flat-box'>
    <div class='row'>
        <div class='flat-box-title col-md-12' style="justify-content: center; font-size: 14px">
        Status Pengajuan Akseptasi
        </div>
    </div>

    <div class='flat-box-content'>
        <div class='row'>
            <section class='col-sm-3'>
                <div class='card card-custom' onclick="window.open('@Model.Data[0].url', 'mywindow');" style='cursor: pointer;width:auto; height: 120px; background: #6FA8DC'>
                    <div class='card-body' style='display:flex'>
                        <span class='fa @Model.Data[0].icon' style='font-size: 5em'></span>
                        <p style='align-self: center; margin-left:1em'>@Model.Data[0].nm_status</p>
                        <p style='position:absolute; bottom:0; right:0; font-size:2em; margin-bottom:0px; margin-right:1em'>@Model.Data[0].jml_data</p>
                    </div>
                </div>
            </section>
            <section class='col-sm-3'>
                <div class='card card-custom' onclick="window.open('@Model.Data[1].url', 'mywindow');" style='cursor: pointer;width:auto; height: 120px; background: #597EAA'>
                    <div class='card-body' style='display:flex'>

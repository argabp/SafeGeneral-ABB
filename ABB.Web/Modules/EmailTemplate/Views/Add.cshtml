@using Kendo.Mvc.UI
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ABB.Web.Modules.EmailTemplate.Models.EmailTemplateViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@addTagHelper *, ABB.Web

<script src="~/Modules/EmailTemplate/JS/emailTemplate.add.js"></script>

<div class="window-body">
    @Html.HiddenFor(h => h.Id);
    <form id="EmailTemplateForm" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="Name" class="col-sm-3">Nama Template</label>
            <div class="col-md-12 col-sm-6">
                <kendo-textbox for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="row col-sm-12">
                <label asp-for="Body" class="col-sm-3" style="align-self: center">Body</label>
            </div>
            <div class="col-md-12 col-sm-6">
                @(Html.Kendo().Editor()
                    .Name("Body")
                    .HtmlAttributes(new { style = "width: 100%; height:500px", aria_label = "editor" })
                    .Tools(tools => tools
                        .Clear()
                        .Bold().Italic().Underline()
                        .JustifyLeft().JustifyCenter().JustifyRight()
                        .InsertUnorderedList().InsertOrderedList()
                        .Outdent().Indent()
                        .CreateLink().Unlink()
                        .InsertImage()
                        .TableEditing()
                        .FontName()
                        .FontSize()
                        .FontColor().BackColor()
                    ))
                  <span asp-validation-for="Body" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

<div class="window-footer">
    <button type="button" id="btn-add-emailTemplate" class="btn btn-primary space-right"><span class='fa fa-save'></span> Save</button>
</div>
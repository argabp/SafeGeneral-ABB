@using ABB.Application.CancelPostingMutasiKlaims.Queries
@using Kendo.Mvc.UI
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Cancel Posting Mutasi Klaim";
}
<script src="~/Modules/CancelPostingMutasiKlaim/JS/cancelPostingMutasiKlaim.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>
<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-4">
            Cancel Posting Mutasi Klaim
        </div>

        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>

        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="cancelPostingMutasiKlaim()">Cancel Posting</button>
        </div>

        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="postingAccounting()">Posting Accounting</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<CancelPostingMutasiKlaimDto>()
                .Name("CancelPostingMutasiKlaimGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetCancelPostingMutasiKlaims", "CancelPostingMutasiKlaim").Data("searchFilter"))
                    .Model(model => model.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Select().Width(50);
                    columns.Bound(col => col.nomor_klaim).Width(200).Title("Nomor Klaim");
                    columns.Bound(col => col.nm_ttj).Width(150).Title("Nama Tertuju");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .PersistSelection()
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
        
                )    
        </div>
    </div>
</div>


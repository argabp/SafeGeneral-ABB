@using Kendo.Mvc.UI
@using ABB.Application.EntriNotas.Queries
@using ABB.Domain.Entities
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Nota Tertanggung";
}
<script src="~/Modules/EntriNota/JS/entriNota.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>

<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-8">
            Nota Tertanggung
        </div>

        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<NotaDto>()
                .Name("EntriNotaGrid")
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetEntriNotas", "EntriNota").Data("searchFilter"))
                    .Model(model => model.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Command(command =>
                    {
                        command.Custom("EditNota")
                            .Text("Edit")
                            .IconClass("k-icon k-i-edit")
                            .HtmlAttributes(new { title="Edit"})
                            .Click("onEditEntriNota");
                        command.Custom("ViewNota")
                            .Text("View")
                            .IconClass("fa fa-eye")
                            .HtmlAttributes(new { title = "View" })
                            .Click("onViewEntriNota");
                    }).Width(200).Title("Action").Locked(true);
                    columns.Bound(col => col.nm_cb).Width(150).Title("Nama Cabang");
                    columns.Bound(col => col.nm_cob).Width(150).Title("Nama COB");
                    columns.Bound(col => col.nm_scob).Width(150).Title("Nama SCOB");
                    columns.Bound(col => col.no_pol_ttg).Width(200).Title("Nomor Polis").ClientTemplate("#= formatNoPol(no_pol_ttg) #");
                    columns.Bound(col => col.no_nt_msk).Width(200).Title("Nomor Nota").ClientTemplate("#= formatNomorNota(kd_cb, jns_tr, kd_thn, kd_bln, no_nt_msk, jns_nt_kel, no_nt_kel) #");;
                    columns.Bound(col => col.nm_ttj).Width(150).Title("Nama Tertuju");
                    columns.Bound(col => col.tgl_nt).Title("Tanggal Nota").Format("{0: dd-MM-yyyy}");
                    columns.Bound(col => col.nilai_nt).Width(150).Title("Nilai Nota").Format("{0:n2}");
                    columns.Bound(col => col.flag_posting).Width(150).Title("Flag Posting");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("onEntriNotaDataBound"))
                ) 
        </div>
        
        @(Html.Kendo().Window()
            .Name("EntriNotaWindow")
            .Title("Entri Nota")
            .Width(1200)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
            )
        
        @(Html.Kendo().Window()
            .Name("EntriNotaCancelWindow")
            .Title("Entri Nota Cancel")
            .Width(1000)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
            )
    </div>
</div>
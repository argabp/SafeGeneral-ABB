@using Kendo.Mvc.UI
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@addTagHelper *, ABB.Web

<script src="~/Modules/ApprovalAkseptasi/JS/approvalAkseptasi.escalated.js"></script>

<div class="window-body">
    <form id="approvalForm" enctype="multipart/form-data" autocomplete="off">
        <div class="col-sm-12 form-group">
            <kendo-textarea name="keterangan" rows="5"></kendo-textarea>
        </div>
        <div class="col-sm-6 form-group">
            <kendo-upload name="upload" multiple="true"></kendo-upload>
        </div>
        <div class="col-sm-12 form-group">
            <kendo-dropdownlist name="kd_user_sign" style="width: 100%" option-label="Pilih User Sign"
                                datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                <datasource type="DataSourceTagHelperType.Custom">
                    <transport>
                        <read url="@Url.Action("GetUserSign", "ApprovalAkseptasi")"/>
                    </transport>
                </datasource>
            </kendo-dropdownlist>
        </div>
    </form>

    <div class="window-footer">
        <button type="button" id="btn-approvalAkseptasi-escalated" class="btn btn-primary space-right">
            Escalated
        </button>
    </div>
</div>
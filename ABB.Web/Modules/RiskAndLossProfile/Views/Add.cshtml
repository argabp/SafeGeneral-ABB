@using Kendo.Mvc.UI
@model ABB.Web.Modules.RiskAndLossProfile.Models.RiskAndLossProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@addTagHelper *, ABB.Web

<div class="window-body" style="background-color: lightgray">
    <form id="RiskAndLossProfileForm" enctype="multipart/form-data" autocomplete="off">
        <div class="form-group col-sm-12">
            <label class="col-sm-12">Kode COB</label>
            <div class="col-sm-12">
                <kendo-dropdownlist for="kd_cob" style="width: 100%" class="primary-dropdown"
                                    datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                    <datasource type="DataSourceTagHelperType.Custom">
                        <transport>
                            <read url="@Url.Action("GetCOB", "RiskAndLossProfile")"/>
                        </transport>
                    </datasource>
                </kendo-dropdownlist>
                <span asp-validation-for="kd_cob" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">Nomor</label>
            <div class="col-sm-12">
                <kendo-numerictextbox for="nomor" style="width: 100%; background-color: #00FFFF"/>
                <span asp-validation-for="nomor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">Batas 1</label>
            <div class="col-sm-12">
                <kendo-numerictextbox for="bts1" style="width: 100%; background-color: #FFFFE1"/>
                <span asp-validation-for="bts1" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-sm-12">
            <label class="col-sm-12">Batas 2</label>
            <div class="col-sm-12">
                <kendo-numerictextbox for="bts2" style="width: 100%; background-color: #FFFFE1"/>
                <span asp-validation-for="bts2" class="text-danger"></span>
            </div>
        </div>
    </form>
</div>

<div class="window-footer">
    <button type="button" onclick="onSaveRiskAndLossProfile()" class="btn btn-success space-right">
        <span class="fa fa-save"></span> Save
    </button>
</div>
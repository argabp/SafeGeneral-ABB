@using Kendo.Mvc.UI
@using ABB.Application.VoucherBanks.Queries

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Voucher Bank";
}

<script src="~/Modules/VoucherBank/JS/voucherbank.index.js"></script>

<div class="flat-box">
        <div class="flat-box-title ">
            Voucher Bank
            <div class="pullright-flex">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
            <button class="flat-btn-primary" onclick="btnAddVoucherBank_OnClick()">Entri Voucher Bank</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<VoucherBankDto>()
                .Name("VoucherBankGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetVoucherBank", "VoucherBank").Data("getSearchFilter"))
                    .Model(model => model.Id(p => p.NoVoucher)) // Primary Key
                )
                .Columns(columns =>
                {
                    columns.Bound(col => col.KodeCabang).Width(200).Title("Kode Cabang");
                    columns.Bound(col => col.NoVoucher).Width(200).Title("No. Voucher");
                    columns.Bound(col => col.DebetKredit).Width(200).Title("Debit/ Kredit");
                    columns.Bound(col => col.TanggalVoucher).Format("{0:dd-MM-yyyy}").Width(150).Title("Tanggal");
                    columns.Bound(col => col.DiterimaDari).Width(250).Title("Diterima Dari");
                    columns.Bound(col => col.KeteranganVoucher).Width(300).Title("Keterangan");
                    columns.Bound(col => col.TotalVoucher).Format("{0:n2}").Width(180).Title("Total");
                    columns.Bound(col => col.FlagPosting).Title("Posting").Width(100)
                        .ClientTemplate("#= FlagPosting ? '<i class=\"fa fa-check text-success\"></i> Yes' : '<i class=\"fa fa-times text-danger\"></i> No' #");
                    columns.Command(command =>
                    {
                        command.Custom("EditVoucherBank")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .Click("btnEditVoucherBank_OnClick");
                        command.Custom("DeleteVoucherBank")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .Click("onDeleteVoucherBank");
                    }).Width(200).Title("Action").Locked(true);
                })
                .Pageable(pager => pager.Refresh(true))
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
            )
        </div>
        
        @(Html.Kendo().Window()
            .Name("VoucherBankWindow")
            .Title("Voucher Bank")
            .Width(600)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
        )
    </div>
</div>
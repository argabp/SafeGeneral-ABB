@using Kendo.Mvc.UI
@using ABB.Application.VoucherBanks.Queries

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Voucher Bank";
}

<script src="~/Modules/VoucherBank/JS/voucherbank.index.js"></script>
<style>
 .breadcrumb-item + .breadcrumb-item::before {
        content: ">"; /* Ganti '/' dengan '>' */
        padding: 0 .5rem; /* Atur spasi jika perlu */
    }
</style>
<nav  aria-label="breadcrumb">
   <ol class="breadcrumb" style="background: white; ">
        <li class="breadcrumb-item"><a href="#">Finance</a></li>
        <li class="breadcrumb-item active" aria-current="page">Voucher Bank</li>
    </ol>
    </nav>
<div class="flat-box">
        <div class="flat-box-title ">
            Voucher Bank
            <div class="pullright-flex">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
            <button class="flat-btn-primary" onclick="btnAddVoucherBank_OnClick()">Entri Voucher Bank</button>
        </div>
    </div>

   <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<VoucherBankDto>()
                .Name("VoucherBankGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetVoucherBank", "VoucherBank").Data("getSearchFilter"))
                    .Model(model => model.Id(p => p.Id)) 
                )
                .Columns(columns =>
                {
                    // 1. Cabang
                    columns.Bound(col => col.KodeCabang).Title("Cabang").Width(200)
                        .ClientTemplate("#= KodeCabang # - #= NamaCabang #");

                    // 2. No. Voucher
                    columns.Bound(col => col.NoVoucher)
                        .Width(220)
                        .Title("No. Voucher")
                        .ClientTemplate("#= (NoVoucher == null || NoVoucher == '') ? (NoVoucherSementara || '-') : NoVoucher #");

                    columns.Bound(col => col.NamaBank).Width(180).Title("Nama Bank");

                    // 3. Tanggal Voucher
                    columns.Bound(col => col.TanggalVoucher).Format("{0:dd-MM-yyyy}").Width(180).Title("Tanggal Voucher");

                    // 4. Keterangan
                    columns.Bound(col => col.KeteranganVoucher).Width(250).Title("Keterangan");

                    // 5. Dibayarkan / Diterima (Pastikan properti 'DibayarKepada' ada di DTO)
                    columns.Bound(col => col.DiterimaDari).Width(200).Title("Dibayarkan / Diterima");

                    // 6. Nilai Voucher (Total)
                    columns.Bound(col => col.TotalVoucher).Format("{0:n2}").Width(150)
                        .Title("Nilai Voucher")
                        .HtmlAttributes(new { style = "text-align:right;" });

                    // 7. Debet/Kredit
                    columns.Bound(col => col.DebetKredit).Width(100).Title("D/K")
                        .ClientTemplate("#= DebetKredit == 'D' ? 'Debet' : (DebetKredit == 'K' ? 'Kredit' : '') #")
                        .HtmlAttributes(new { style = "text-align:center;" });
                    
                    // 8. Posting
                    columns.Bound(col => col.FlagPosting).Title("Posting").Width(100)
                        .ClientTemplate("#= FlagPosting ? '<i class=\"fa fa-check text-success\"></i> Yes' : '<i class=\"fa fa-times text-danger\"></i> No' #")
                        .HtmlAttributes(new { style = "text-align:center;" });

                    // Action
                    columns.Command(command =>
                    {
                        command.Custom("EditVoucherBank")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .Click("btnEditVoucherBank_OnClick");
                        command.Custom("DeleteVoucherBank")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .Click("onDeleteVoucherBank");
                        command.Custom("CetakPembayaranBank").Text(" Cetak ").IconClass("fa fa-print").Click("btnCetakPembayaranBank_OnClick");
                    }).Width(200).Title("Action").Locked(true);
                })
                .Pageable(pager => pager.Refresh(true).Info(true).PageSizes(true))
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
            )
        </div>
        
        @(Html.Kendo().Window()
            .Name("VoucherBankWindow")
            .Title("Voucher Bank")
            .Width(600)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
        )
    </div>
</div>
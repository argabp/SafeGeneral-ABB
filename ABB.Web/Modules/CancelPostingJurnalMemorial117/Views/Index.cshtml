@using Kendo.Mvc.UI
@using Microsoft.Extensions.Configuration

@using ABB.Application.JurnalMemorial117.Queries 
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Posting Jurnal Memorial 117";
}

<script src="~/Modules/CancelPostingJurnalMemorial117/JS/CancelPostingJurnalMemorial117.js"></script>

<style>
    .div-box{ padding-bottom: 1em; }
     .breadcrumb-item + .breadcrumb-item::before { content: ">"; padding: 0 .5rem; }
</style>

<nav aria-label="breadcrumb">
   <ol class="breadcrumb" style="background: white; ">
        <li class="breadcrumb-item"><a href="#">Accounting</a></li> 
        <li class="breadcrumb-item active" aria-current="page">Posting Jurnal Memorial 117</li>
    </ol>
</nav>
<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-10">
            Cancel Posting Jurnal Memorial 117
        </div>
        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="cancelPostingJurnal117()">Cancel Posting</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<JurnalMemorial117Dto>()
                .Name("CancelPostingGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetPostedJurnal", "CancelPostingJurnalMemorial117").Data("searchFilter"))
                    .Model(model => model.Id(p => p.NoVoucher))
                    .PageSize(20)
                )
                .Columns(columns =>
                {
                    columns.Select().Width(50);
                    columns.Bound(col => col.KodeCabang).Width(100).Title("Cabang");
                    columns.Bound(col => col.NoVoucher).Width(180).Title("No. Voucher");
                    columns.Bound(col => col.Tanggal).Format("{0:dd-MM-yyyy}").Width(120).Title("Tanggal");
                    columns.Bound(col => col.Keterangan).Width(350).Title("Keterangan");
                })
                .Pageable(pager => pager.Refresh(true).Info(true).PageSizes(true))
                .PersistSelection()
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Events(ev => ev.DataBound("gridAutoFit"))
            )    
        </div>
    </div>
</div>

<script>
    function searchFilter() {
        return { };
    }
    function gridAutoFit(e) { }
</script>
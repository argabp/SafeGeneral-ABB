                <div class="col-sm-2">
                        <kendo-textbox id="JenisPenyelesaianSuffix" readonly="true" value="Memorial" style="font-size: 12px;" />
                            <input type="hidden" asp-for="PenyelesaianHeader.JenisPenyelesaian" />
                </div>
            </div>
             <div class="form-group row">
              

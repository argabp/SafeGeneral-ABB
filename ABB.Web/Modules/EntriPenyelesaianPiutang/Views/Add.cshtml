                <label class="col-sm-2 col-form-label" asp-for="PenyelesaianHeader.KodeAkun">Kode Akun</label>
                <div class="col-sm-4">
                    <kendo-combobox for="PenyelesaianHeader.KodeAkun"
                                    style="width:100%;"
                                    datatextfield="Text"
                                    datavaluefield="Value"

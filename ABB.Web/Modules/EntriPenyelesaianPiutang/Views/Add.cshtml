        </fieldset>
        
        <hr/>

        <fieldset>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label" asp-for="PenyelesaianHeader.Tanggal"></label>
                <div class="col-sm-4">
                    <kendo-datepicker for="PenyelesaianHeader.Tanggal" style="width: 100%;" />
                </div>

                <div class=" col-sm-2">
                    <kendo-numerictextbox for="PenyelesaianHeader.TotalRp"readonly="true" format="n2" style="width: 50%;" />
                </div>
                <div class=" col-sm-1">
                    <kendo-dropdownlist  for="PenyelesaianHeader.DebetKredit"
                                        style="width: 100%;"
                                        datatextfield="Text"
                                        datavaluefield="Value"
                                        bind-to="ViewBag.DebetKreditOptions"

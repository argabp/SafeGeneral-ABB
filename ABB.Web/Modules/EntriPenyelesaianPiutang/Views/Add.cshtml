                    </kendo-dropdownlist>
                </div>
                <label class="col-sm-1 col-form-label" asp-for="PenyelesaianHeader.TanggalUpdate">Tanggal Update</label>
                <div class="col-sm-2">
                    <kendo-datepicker for="PenyelesaianHeader.TanggalUpdate" style="width: 100%;" readonly="true" />
           
                </div>
            </div>
             

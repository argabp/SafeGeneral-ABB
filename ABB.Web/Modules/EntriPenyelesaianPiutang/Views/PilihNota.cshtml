<script>
       var coaDataSource = @Html.Raw(JsonConvert.SerializeObject(ViewBag.KodeAkunOptions ?? new List<SelectListItem>()));

    function onPilihNotaGridDataBound(e) {
        var grid = e.sender;
        var items = grid.items(); 
        var totalItems = grid.dataSource.total();
        var pager = grid.pager;

        // --- Logic Pagination All ---
        if (pager) {
            var pageSizeDropDown = pager.element.find("select[data-role='dropdownlist']").data("kendoDropDownList");
            if (pageSizeDropDown) {
                var ds = pageSizeDropDown.dataSource.data();
                var found = false;
                for (var i = 0; i < ds.length; i++) {
                    var currentValue = ds[i].value;
                    if (currentValue == 50000 || (currentValue > 500 && currentValue == totalItems)) { 
                        ds[i].value = totalItems; 
                        ds[i].text = "All"; 
                        found = true;
                        break;
                    }
                }
                if (found) {
                    pageSizeDropDown.refresh();
                    if (pageSizeDropDown.value() == totalItems) {
                        pageSizeDropDown.span.text("All");
                    }
                }
            }
        }

        // --- LOGIC BARU: AUTO HITUNG KURS (PIUTANG) ---
       items.each(function (index, row) {
            var dataItem = grid.dataItem(row);
            var $row = $(row);
            
            var $inputOrg = $row.find('.total-org-input');
            var $inputRp = $row.find('.total-rp-input');
            
            var saldoOriginal = parseFloat(dataItem.saldo) || 0;
            
            // --- [KUNCI 1: Ubah Tampilan Jadi Positif untuk User] ---
            var tampilanSaldo = Math.abs(saldoOriginal); 

            var kodeMtu = dataItem.kd_mtu; 
            var rawDate = dataItem.date; 
            var formattedDate = "";

            if (rawDate) {
                var dateObj = kendo.parseDate(rawDate);
                if(dateObj){
                    formattedDate = kendo.toString(dateObj, "yyyy-MM-dd");
                }
            } 
            
            if (!formattedDate) {
                var tglHeader = $("#PenyelesaianHeader_Tanggal").val(); 
                if(tglHeader) {
                    var dateHeaderObj = kendo.parseDate(tglHeader);
                    if(dateHeaderObj) {
                         formattedDate = kendo.toString(dateHeaderObj, "yyyy-MM-dd");
                    }
                }
            }

            // Set Nilai Default Input (Gunakan nilai positif)
            if($inputOrg.val() == "" || $inputOrg.val() == 0) {
                $inputOrg.val(tampilanSaldo);
            }

            // Logika Rupiah Otomatis
            if (kodeMtu && kodeMtu.trim() === '001') {
                $inputRp.val(tampilanSaldo.toFixed(2));
                $inputRp.data('kurs', 1); 
            } 
            else if (kodeMtu && formattedDate && tampilanSaldo > 0) {
                var url = `/EntriPenyelesaianPiutang/GetKurs?kodeMataUang=${kodeMtu}&tanggalVoucher=${formattedDate}`;
                
                $.ajax({
                    type: "GET",
                    url: url,
                    success: function (response) {
                        if (response && response.nilai_kurs) {
                            var kurs = response.nilai_kurs;
                            var totalRupiah = tampilanSaldo * kurs;
                            
                            $inputRp.val(totalRupiah.toFixed(2));
                            $inputRp.data('kurs', kurs);
                        }
                    }
                });
            }
        });
    }

    function getNotaProduksiSearchFilter() {
    var startPicker = $("#StartDate").data("kendoDatePicker");
    var endPicker   = $("#EndDate").data("kendoDatePicker");

    return {
        searchKeyword: $("#PilihNotaSearchKeyword").val(),
        jenisAsset: $("#JenisAsset").val(),
        startDate: startPicker ? startPicker.value() : null,
        endDate: endPicker ? endPicker.value() : null
    };
}

    function onSearchClick() {
        var grid = $("#PilihNotaGrid").data("kendoGrid");
        grid.dataSource.page(1); 
        grid.dataSource.read();  
    }

    $(function() {
        $("#PilihNotaSearchKeyword").on("keyup", function(e) {
            if (e.key === "Enter") {
                onSearchClick();
            }
        });
    });
        
    </script>

<script src="~/Modules/EntriPenyelesaianPiutang/JS/entripenyelesaianpiutang.index.js"></script>



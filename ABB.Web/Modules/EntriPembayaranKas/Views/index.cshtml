@using Kendo.Mvc.UI
@using Kendo.Mvc.TagHelpers
@using ABB.Application.EntriPembayaranKass.Queries
@using ABB.Application.VoucherKass.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Entri Pembayaran Kas";
}

<link rel="stylesheet" href="https://unpkg.com/paper-css@0.4.1/paper.css">
<script src="~/Modules/EntriPembayaranKas/JS/entripembayarankas.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }

     .breadcrumb-item + .breadcrumb-item::before {
        content: ">"; /* Ganti '/' dengan '>' */
        padding: 0 .5rem; /* Atur spasi jika perlu */
    }
</style>
<nav  aria-label="breadcrumb">
   <ol class="breadcrumb" style="background: white; ">
        <li class="breadcrumb-item"><a href="#">Finance</a></li>
        <li class="breadcrumb-item active" aria-current="page">Entri Pembayaran Kas</li>
    </ol>
    </nav>
<div class="flat-box">
        <div class="flat-box-title ">
           Entri Pembayaran Kas
            <div class="pullright-flex">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
      
            <!-- <button class="flat-btn-primary" onclick="btnAddVoucherKas_OnClick()">Entri Voucher Kas</button> -->
        </div>
    </div>

    <div class="flat-box-content">
            @(Html.Kendo().TabStrip()
        .Name("tabStrip")
        .Items(items =>
        {
            // --- TAB 1: DATA YANG MASIH DI-PROSES (BELUM FINAL) ---
            items.Add().Text("Dalam Proses").Selected(true)
                .Content(
                    @<text>
                    <div class="div-box">
                        @(Html.Kendo().Grid<VoucherKasDto>() // <-- Menggunakan DTO Kas
                            .Name("BelumFinalGrid") 
                            .DataSource(dataSource => dataSource.Ajax()
                                .Read(read => read.Action("GetEntriPembayaranKas", "EntriPembayaranKas").Data("getSearchFilterBelumFinal"))
                            )
                            .Columns(columns =>
                            {
                                columns.Bound(col => col.KodeCabang).Title("Cabang").Width(200).ClientTemplate("#= KodeCabang # - #= NamaCabang #");
                                columns.Bound(col => col.TotalVoucher).Format("{0:n2}").Width(150).Title("Total");
                                columns.Bound(col => col.NoVoucher).Width(200).Title("No. Voucher");
                                columns.Bound(col => col.DebetKredit).Width(150).Title("Debet / Kredit").ClientTemplate("#= DebetKredit == 'D' ? 'Debet' : (DebetKredit == 'K' ? 'Kredit' : '-') #");
                                columns.Bound(col => col.DibayarKepada).Width(250).Title("Diterima Dari");
                                columns.Bound(col => col.TanggalVoucher).Format("{0:dd-MM-yyyy}").Width(150).Title("Tanggal");
                                columns.Bound(col => col.KeteranganVoucher).Width(300).Title("Keterangan");
                                columns.Bound(col => col.FlagPosting).Title("Posting").Width(100)
                                    .ClientTemplate("#= FlagPosting ? '<i class=\"fa fa-check text-success\"></i> Yes' : '<i class=\"fa fa-times text-danger\"></i> No' #");
                                columns.Command(command =>
                                {
                                    // Tombol "Edit Pembayaran" untuk Tab 1
                                    command.Custom("EntriPembayaranKas").Text(" Edit Pembayaran ").IconClass("fa fa-plus").Click("btnEntriPembayaranKas_OnClick");
                                }).Width(220).Title("Action").Locked(true);
                            })
                            .Pageable(pager => pager.Refresh(true).PageSizes(true))
                            .Sortable()
                            .Filterable()
                            .Scrollable()
                            .Height(450)
                            .Resizable(a=>a.Columns(true))
                        )
                    </div>
                    </text>
                );

            // --- TAB 2: DATA YANG SUDAH FINAL ---
            items.Add().Text("Sudah Final")
                .Content(
                    @<text>
                    <div class="div-box">
                        @(Html.Kendo().Grid<VoucherKasDto>() // <-- Menggunakan DTO Kas
                            .Name("SudahFinalGrid")
                            .DataSource(dataSource => dataSource.Ajax()
                                .Read(read => read.Action("GetEntriPembayaranKasFinal", "EntriPembayaranKas").Data("getSearchFilterSudahFinal"))
                            )
                            .Columns(columns =>
                            {
                                columns.Bound(col => col.KodeCabang).Title("Cabang").Width(200).ClientTemplate("#= KodeCabang # - #= NamaCabang #");
                                columns.Bound(col => col.TotalVoucher).Format("{0:n2}").Width(150).Title("Total");
                                columns.Bound(col => col.NoVoucher).Width(200).Title("No. Voucher");
                                columns.Bound(col => col.DebetKredit).Width(150).Title("Debet / Kredit").ClientTemplate("#= DebetKredit == 'D' ? 'Debet' : (DebetKredit == 'K' ? 'Kredit' : '-') #");
                                columns.Bound(col => col.DibayarKepada).Width(250).Title("Diterima Dari");
                                columns.Bound(col => col.TanggalVoucher).Format("{0:dd-MM-yyyy}").Width(150).Title("Tanggal");
                                columns.Bound(col => col.KeteranganVoucher).Width(300).Title("Keterangan");
                                columns.Bound(col => col.FlagPosting).Title("Posting").Width(100)
                                    .ClientTemplate("#= FlagPosting ? '<i class=\"fa fa-check text-success\"></i> Yes' : '<i class=\"fa fa-times text-danger\"></i> No' #");
                                columns.Command(command =>
                                {
                                    // Tombol "Lihat" dan "Cetak" untuk Tab 2
                                    command.Custom("EntriPembayaranKasProses").Text(" Proses Ulang ").IconClass("fa fa-eye").Click("btnProsesPembayaranKas_OnClick");
                                    command.Custom("EntriPembayaranKasLihat").Text(" Lihat ").IconClass("fa fa-eye").Click("btnLihatPembayaranKas_OnClick");
                                    command.Custom("CetakPembayaranKas").Text(" Cetak ").IconClass("fa fa-print").Click("btnCetakPembayaranKas_OnClick");
                                }).Width(220).Title("Action").Locked(true);
                            })
                            .Pageable(pager => pager.Refresh(true).PageSizes(true))
                            .Sortable()
                            .Filterable()
                            .Scrollable()
                            .Height(450)
                            .Resizable(a=>a.Columns(true))
                        )
                    </div>
                    </text>
                );
        })
    )

    @(Html.Kendo().Window()
        .Name("EntriPembayaranKasWindow")
        .Title("Entri Pembayaran Kas")
        .Width(1000)
        .Modal(true)
        .Visible(false)
        .Draggable(true)
    )

     @(Html.Kendo().Window()
        .Name("EntriPembayaranKasLihatWindow")
        .Title("Lihat Pembayaran Kas")
        .Width(1000)
        .Modal(true)
        .Visible(false)
        .Draggable(true)
    )
    </div>
</div>

<script>
    // Fungsi untuk filter Tab 1 (Dalam Proses)
    function getSearchFilterBelumFinal() {
        return {
            searchKeyword: $("#SearchKeyword").val(),
            flagFinal: false
        };
    }

    // Fungsi untuk filter Tab 2 (Sudah Final)
    function getSearchFilterSudahFinal() {
        return {
            searchKeyword: $("#SearchKeyword").val(),
            flagFinal: true
        };
    }

    // Skrip untuk me-refresh grid yang aktif
    $(document).ready(function () {
        $("#SearchKeyword").on("keyup", function() {
            var tabStrip = $("#tabStrip").data("kendoTabStrip");
            var activeTabIndex = tabStrip.select().index();

            if(activeTabIndex === 0) {
                $("#BelumFinalGrid").data("kendoGrid").dataSource.read();
            } else {
                $("#SudahFinalGrid").data("kendoGrid").dataSource.read();
            }
        });
    });
</script>

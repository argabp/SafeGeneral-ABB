@using Kendo.Mvc.UI
@using ABB.Application.ApprovalKlaims.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Setup Approval Klaim";
}
<script src="~/Modules/ApprovalKlaim/JS/approvalKlaim.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>

<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-6">
            Setup Approval Klaim
        </div>
        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>
        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="btnAddApprovalKlaim()">Add Approval Klaim</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<ApprovalKlaimDto>()
                .Name("ApprovalKlaimGrid")
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetApprovalKlaims", "ApprovalKlaim").Data("searchFilter"))
                    .Model(model => model.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Command(command =>
                    {
                        command.Custom("EditApprovalKlaim")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .HtmlAttributes(new { title = "Edit" })
                            .Click("btnEditApprovalKlaim");
                        command.Custom("DeleteApprovalKlaim")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .HtmlAttributes(new { title = "Delete" })
                            .Click("onDeleteApprovalKlaim");
                    }).Width(200).Title("Action");
                    columns.Bound(col => col.nm_cb).Title("Nama Cabang");
                    columns.Bound(col => col.nm_cob).Title("Nama COB");
                    columns.Bound(col => col.nm_scob).Title("Nama Sub COB");
                    columns.Bound(col => col.nm_approval).Title("Nama Approval");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .ClientDetailTemplateId("template")
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
        
                )    
        </div>
        
        <script id="template" type="text/kendo-tmpl">
            <div class="row">
                <div class="col-md-4 k-button k-button-icontext">
                    <button style="border: none;" onclick="btnAddApprovalDetailKlaim('#=kd_cb#', '#=kd_cob#', '#=kd_scob#')">+ ADD NEW RECORD</button>
                </div>
            </div>
            @(Html.Kendo().Grid<ApprovalKlaimDetailDto>()
                .Name("grid_Detail_#=Id#") // template expression, to be evaluated in the master context
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetApprovalKlaimDetails", "ApprovalKlaim", new { kd_cb = "#=kd_cb#", kd_cob = "#=kd_cob#", kd_scob = "#=kd_scob#" }))//.Data("getAsumsiPeriodeParam"))
                    .Model(m => m.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Bound(col => col.nm_user).Title("Nama User");
                    columns.Bound(col => col.nm_status).Title("Status");
                    columns.Bound(col => col.nm_user_sign).Title("Nama User Sign");
                    columns.Bound(col => col.sla).Title("SLA");
                    columns.Command(command =>
                    {
                        command.Custom("EditApprovalKlaimDetail")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .HtmlAttributes(new { title = "Edit" })
                            .Click("btnEditApprovalKlaimDetail");
                        command.Custom("DeleteApprovalKlaimDetail")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .HtmlAttributes(new { title="Delete"})
                            .Click("onDeleteApprovalKlaimDetail");
                    }).Width(200).Title("Action");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .Sortable()
                .Selectable()
                .Filterable()
                .Scrollable()
                .Height(380)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
                .ToClientTemplate())
        </script>

        @(Html.Kendo().Window()
            .Name("ApprovalKlaimWindow")
            .Title("Approval Klaim")
            .Width(500)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
            )
    </div>
</div>


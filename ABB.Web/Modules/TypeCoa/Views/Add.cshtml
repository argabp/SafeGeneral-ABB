@model ABB.Web.Modules.TypeCoa.Models.TypeCoaViewModel
@using Kendo.Mvc.UI
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@{
    // Cek mode edit jika Kode sudah terisi
    bool isEditMode = !string.IsNullOrEmpty(Model.Type);
}

<div class="window-body" style="padding: 15px;">
    <form id="TipeAkunForm">
        
        <div class="form-group row">
            <label class="col-sm-3 col-form-label" asp-for="Type">Kode Tipe</label>
            <div class="col-sm-9">
                @if (isEditMode)
                {
                    <kendo-textbox for="Type" style="width: 100%;" readonly="true" />
                }
                else
                {
                    <kendo-textbox for="Type" style="width: 100%;" placeholder="Masukkan Kode..." />
                }
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label" asp-for="Nama">Nama Tipe</label>
            <div class="col-sm-9">
                <kendo-textbox for="Nama" style="width: 100%;" placeholder="Masukkan Nama Tipe..." />
                <span asp-validation-for="Nama" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label" asp-for="Pos">POS</label>
            <div class="col-sm-9">
                <div style="display: flex; flex-direction: column; gap: 5px; margin-top: 8px;">
                    <div>
                        <input type="radio" asp-for="Pos" value="AK" id="Pos_AK" class="k-radio" />
                        <label class="k-radio-label" for="Pos_AK">Neraca - Aktiva (AK)</label>
                    </div>

                    <div>
                        <input type="radio" asp-for="Pos" value="PS" id="Pos_PS" class="k-radio" />
                        <label class="k-radio-label" for="Pos_PS">Neraca - Passive (PS)</label>
                    </div>
                    
                    <div>
                        <input type="radio" asp-for="Pos" value="01" id="Pos_01" class="k-radio" />
                        <label class="k-radio-label" for="Pos_01">Laba Rugi - Income (01)</label>
                    </div>

                    <div>
                        <input type="radio" asp-for="Pos" value="02" id="Pos_02" class="k-radio" />
                        <label class="k-radio-label" for="Pos_02">Laba Rugi - Cost (02)</label>
                    </div>
                </div>
                <span asp-validation-for="Pos" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-sm-3 col-form-label" asp-for="Dk">Debet/Kredit</label>
            <div class="col-sm-9">
                <div>
                    <kendo-dropdownlist for="Dk"
                                        style="width: 100%;"
                                        datatextfield="Text"
                                        datavaluefield="Value"
                                        bind-to="ViewBag.DebetKreditOptions">
                        
                    </kendo-dropdownlist>
                    <span asp-validation-for="Dk" class="text-danger"></span>
                </div>
            </div>
        </div>

        <hr />

        <div class="row">
            <div class="col-sm-12" style="text-align: right;">
                <button type="button" class="btn btn-secondary" onclick="closeWindow()">Batal</button>
                <button type="button" class="btn btn-primary" onclick="onSaveTypeCoa()">Simpan</button>
            </div>
        </div>
    </form>
</div>
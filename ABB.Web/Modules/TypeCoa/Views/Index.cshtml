@using Kendo.Mvc.UI
@using Kendo.Mvc.TagHelpers
@using ABB.Application.TypeCoas.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Tipe Akun 104";
}

<script src="~/Modules/TypeCoa/JS/TypeCoa.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>

<div class="flat-box">
        <div class="flat-box-title ">
            Tipe Akun 104
            <div class="pullright-flex">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
      
            <button class="flat-btn-primary" onclick="btnAddTypeCoa_OnClick()">Entri Tipe Akun 104</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
             @(Html.Kendo().Grid<TypeCoaDto>()
                .Name("TypeCoaGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetTypeCoa", "TypeCoa").Data("getSearchFilter")) // Arahkan ke action yang baru dibuat
                    .Model(model => model.Id(c => c.Type)) // Primary Key
                )
                .Columns(columns =>
                {
                    columns.Bound(col => col.Type).Width(150).Title("Kode");
                    columns.Bound(col => col.Nama).Width(400).Title("Nama Tipe");
                    columns.Bound(col => col.Pos).Width(150).Title("POS");
                    columns.Bound(col => col.Dk).Width(150).Title("D/K");
                    columns.Command(command =>
                    {
                       command.Custom("Edit")
                          .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                           .Click("btnEditTypeCoa_OnClick");
                     command.Custom("DeleteTypeCoa")
                          .Text("Delete")
                           .IconClass("k-icon k-i-delete")
                          .Click("onDeleteTypeCoa"); 
                    }).Width(180).Title("Action").Locked(true);
                })
                .Pageable(pager => pager.Refresh(true))
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
            )
        </div>

        @(Html.Kendo().Window()
            .Name("TypeCoaWindow")
            .Title("TypeCoa")
            .Width(500)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
        )

    </div>
</div>


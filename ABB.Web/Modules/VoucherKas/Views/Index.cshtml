@using Kendo.Mvc.UI
@using Kendo.Mvc.TagHelpers
@using ABB.Application.VoucherKass.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Voucher Kas";
}

<script src="~/Modules/VoucherKas/JS/voucherkas.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
    .breadcrumb-item + .breadcrumb-item::before {
        content: ">"; /* Ganti '/' dengan '>' */
        padding: 0 .5rem; /* Atur spasi jika perlu */
    }
</style>
<nav  aria-label="breadcrumb">
   <ol class="breadcrumb" style="background: white; ">
        <li class="breadcrumb-item"><a href="#">Finance</a></li>
        <li class="breadcrumb-item active" aria-current="page">Voucher Kas</li>
    </ol>
    </nav>
<div class="flat-box">
        <div class="flat-box-title ">
            Voucher Kas
            <div class="pullright-flex">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
      
            <button class="flat-btn-primary" onclick="btnAddVoucherKas_OnClick()">Entri Voucher Kas</button>
        </div>
    </div>

   <div class="flat-box-content">
        <div class="div-box">
             @(Html.Kendo().Grid<VoucherKasDto>()
                .Name("VoucherKasGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetVoucherKas", "VoucherKas").Data("getSearchFilter"))
                    .Model(model => model.Id(p => p.KodeCabang)) 
                )
                .Columns(columns =>
                {
                    // 1. Cabang
                    columns.Bound(col => col.KodeCabang)
                        .Title("Cabang")
                        .Width(200)
                        .ClientTemplate("#= KodeCabang # - #= NamaCabang #");

                    // 2. No. Voucher
                    columns.Bound(col => col.NoVoucher).Width(180).Title("No. Voucher");

                    columns.Bound(col => col.NamaKas).Width(180).Title("Nama Kas");

                    // 3. Tanggal Voucher
                    columns.Bound(col => col.TanggalVoucher).Format("{0:dd-MM-yyyy}").Width(120).Title("Tanggal Voucher");

                    // 4. Keterangan
                    columns.Bound(col => col.KeteranganVoucher).Width(250).Title("Keterangan");

                    // 5. Dibayarkan / Diterima (Pastikan properti 'DibayarKepada' ada di DTO)
                    columns.Bound(col => col.DibayarKepada).Width(200).Title("Dibayarkan / Diterima");

                    // 6. Nilai Voucher (Total)
                    columns.Bound(col => col.TotalVoucher).Format("{0:n2}").Width(150)
                        .Title("Nilai Voucher")
                        .HtmlAttributes(new { style = "text-align:right;" });

                    // 7. Debet/Kredit
                    columns.Bound(col => col.DebetKredit)
                        .Width(100)
                        .Title("D/K")
                        .ClientTemplate("#= DebetKredit == 'D' ? 'Debet' : (DebetKredit == 'K' ? 'Kredit' : '') #")
                        .HtmlAttributes(new { style = "text-align:center;" });

                    // 8. Posting
                    columns.Bound(col => col.FlagPosting).Title("Posting").Width(100)
                        .ClientTemplate("#= FlagPosting ? '<i class=\"fa fa-check text-success\"></i> Yes' : '<i class=\"fa fa-times text-danger\"></i> No' #")
                        .HtmlAttributes(new { style = "text-align:center;" });

                    // Action
                    columns.Command(command =>
                    {
                         command.Custom("EditVoucherKas")
                           .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .Click("btnEditVoucherKas_OnClick");
                       command.Custom("DeleteKasBank")
                           .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                           .Click("onDeleteVoucherKas"); 
                    }).Width(200).Title("Action").Locked(true);
                })
                .Pageable(pager => pager.Refresh(true).PageSizes(true))
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
            )
        </div>

        @(Html.Kendo().Window()
            .Name("VoucherKasWindow")
            .Title("Voucher Kas")
            .Width(500)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
        )

    </div>
</div>


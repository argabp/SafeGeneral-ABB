@using Kendo.Mvc.UI
@using ABB.Application.ProsesTutupBulan.Dtos
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Proses Tutup Bulan";
}

<style>
    .div-box{
        padding-bottom: 1em;
    }
      .breadcrumb-item + .breadcrumb-item::before {
        content: ">"; /* Ganti '/' dengan '>' */
        padding: 0 .5rem; /* Atur spasi jika perlu */
    }
</style>

<script src="~/Modules/ProsesTutupBulan/JS/ProsesTutupBulan.js"></script>


<nav  aria-label="breadcrumb">
   <ol class="breadcrumb" style="background: white; ">
        <li class="breadcrumb-item"><a href="#">Accounting</a></li>
        <li class="breadcrumb-item active" aria-current="page">Proses Tutup Bulan </li>
    </ol>
    </nav>
<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-10">
            Proses Tutup Bulan
        </div>
        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="executeClosing()">Proses Closing</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<ProsesTutupBulanDto>()
                .Name("GridTutupBulan")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetDaftarPeriode", "ProsesTutupBulan")) // Action Controller Baru
                    .Model(model => model.Id(p => p.ThnPrd + p.BlnPrd)) // ID Unik (Gabungan Thn+Bln)
                    .PageSize(20)
                )
                .Columns(columns =>
                {
                    columns.Select().Width(50); // Checkbox
                    columns.Bound(col => col.ThnPrd).Width(100).Title("Tahun");
                    columns.Bound(col => col.BlnPrd).Width(100).Title("Bulan");
                    columns.Bound(col => col.TglMul).Width(150).Title("Tgl Mulai");
                    columns.Bound(col => col.TglAkh).Width(150).Title("Tgl Akhir");
                    columns.Bound(col => col.Status).Width(120).Title("Status")
                           .ClientTemplate("<span class='badge badge-success'>#= Status #</span>");
                })
                .Pageable(pager => pager.Refresh(true).Info(true))
                .PersistSelection()
                .Sortable()
                .Scrollable()
                .Height(450)
            )    
        </div>
    </div>
</div>
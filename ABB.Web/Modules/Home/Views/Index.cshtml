@using Newtonsoft.Json

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
}
<script src="~/Modules/Home/JS/home.js"></script>

<style>

    .carousel-container {
        position: relative;
        width: 100%;
        /*aspect-ratio: 16 / 9;*/
        max-height: calc(100vh - 200px); /* adapt to navbar */
        overflow: hidden;
        border-radius: 15px;
    }

    .carousel-slide {
        display: flex;
        width: 100%;
        height: 100%;
        transition: transform 0.5s ease-in-out;
    }

    .carousel-image {
        display: block;
        min-width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: transparent;
        color: #FFD700;
        border: none;
        font-size: 3rem;
        padding: 20px;
        cursor: pointer;
        z-index: 10;
        transition: all 0.3s ease;
        text-shadow: 0 2px 5px rgba(0, 0, 0, 0.7);
        opacity: 0.8;
    }

    .carousel-btn:hover {
        color: #000000;
        opacity: 1;
        transform: translateY(-50%) scale(1.1);
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.9);
    }

    .prev-btn {
        left: 15px;
    }

    .next-btn {
        right: 15px;
    }

    .carousel-indicators {
        display: flex;
        justify-content: center;
        position: absolute;
        bottom: 20px;
        z-index: 10;
    }

    /* Add these styles to your existing CSS */
    .indicator {
        width: 12px;
        height: 12px;
        background-color: rgba(255, 255, 255, 0.5);
        border-radius: 50%;
        margin: 0 8px;
        cursor: pointer;
        transition: all 0.3s;
        position: relative;
    }

    .indicator.active {
        background-color: #FFD700;
        box-shadow: 0 0 10px rgba(255, 215, 0, 0.8);
        transform: scale(1.2);
    }

    .indicator:hover {
        background-color: #FFD700;
        transform: scale(1.3);
    }

    .preview-container {
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px) translateX(-50%);
        }
        to {
            opacity: 1;
            transform: translateY(0) translateX(-50%);
        }
    }

    .preview-container:before {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 0;
        height: 0;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;
        border-top: 8px solid rgba(0, 0, 0, 0.8);
    }

    /* Add a subtle bounce effect for the active indicator */
    @@keyframes indicatorPulse {
        0%, 100% {
            transform: scale(1.2);
        }
        50% {
            transform: scale(1.3);
        }
    }

    .indicator.active {
        animation: indicatorPulse 2s infinite;
    }

    .image-info {
        position: absolute;
        bottom: 60px;
        left: 0;
        right: 0;
        text-align: center;
        color: white;
        padding: 20px;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
    }

    @@media (max-width: 768px) {
    .carousel-container {
        height: 400px;
    }

    .carousel-btn {
        font-size: 2.5rem;
        padding: 15px;
    }

    .image-title {
        font-size: 1.5rem;
    }
    }

    @@media (max-width: 480px) {
    .carousel-container {
        height: 300px;
    }

    .carousel-btn {
        font-size: 2rem;
        padding: 10px;
    }

    .image-title {
        font-size: 1.2rem;
    }

    .image-description {
        font-size: 0.9rem;
    }
    }
    .carousel-wrapper {
         width: 100%;
         display: flex;
         justify-content: center;
     }
  </style>

<div class="container-fluid">
    <div class="carousel-wrapper">
        <div class="carousel-container">
            <div class="carousel-slide" id="carouselSlide">
                <!-- Images will be loaded here -->
            </div>
            
            <button class="carousel-btn prev-btn" id="prevBtn">
                ‹
            </button>
            <button class="carousel-btn next-btn" id="nextBtn">
                ›
            </button>
            
            <div class="carousel-indicators" id="indicators">
                <!-- Indicators will be generated by JavaScript -->
            </div>
            
            @* <div class="image-info"> *@
            @*     <div class="image-title" id="imageTitle">Beautiful Landscape</div> *@
            @*     <div class="image-description" id="imageDescription">Stunning natural scenery from around the world</div> *@
            @* </div> *@
        </div>
    </div>
</div>
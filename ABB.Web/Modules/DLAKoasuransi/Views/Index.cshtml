@using ABB.Application.Common.Dtos
@using Kendo.Mvc.UI
@using ABB.Application.DLAKoasuransi.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "DLA Koasuransi";
}
<script src="~/Modules/DLAKoasuransi/JS/dlaKoasuransi.js"></script>

@{
    var bahasas = ViewBag.Bahasa as List<DropdownOptionDto>;
}
<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>
<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-8">
            DLA Koasuransi
        </div>

        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<KoasuransiDto>()
                .Name("DLAKoasuransiGrid")
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetDLAKoasuransi", "DLAKoasuransi").Data("searchFilter"))
                    .Model(model => model.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Bound(col => col.nm_cb).Width(150).Title("Nama Cabang");
                    columns.Bound(col => col.nm_cob).Width(150).Title("Nama COB");
                    columns.Bound(col => col.nm_scob).Width(150).Title("Nama Sub COB");
                    columns.Bound(col => col.no_pol_lama).Title("Nomor Polis").ClientTemplate("#= formatNoPol(no_pol_lama) #");
                    columns.Bound(col => col.nm_ttg).Width(200).Title("Nama Tertanggung");
                    columns.Bound(col => col.nm_ttj).Width(200).Title("Nama Tertuju");
                    columns.Bound(col => col.nomor_berkas).Width(150).Title("Nomor Berkas");
                    columns.Bound(col => col.no_mts).Width(150).Title("Nomor Mutasi");
                    columns.Bound(col => col.no_dla).Width(150).Title("Nomor Dla");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .ClientDetailTemplateId("template")
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
        
                )    
        </div>
        
        <script id="template" type="text/kendo-tmpl">
            <form id="#=Id#" enctype="multipart/form-data" autocomplete="off">
                <div class="form-group row">
                    <div class="row col-sm-3">
                        <label class="col-sm-6">Bahasa</label>
                        <div class="col-sm-6">
                            <select name="bahasa" class="k-dropdown">
                                @foreach (var bahasa in bahasas)
                                {
                                    <option value="@bahasa.Value">@bahasa.Text</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="offset-1 col-sm-3">
                        <button type="button" onclick="viewReport(this)" class="btn btn-info space-right">
                            <span class="fa fa-print"></span> Preview
                        </button>
                    </div>
                </div>
            </form>
        </script>
    </div>
</div>


@using Kendo.Mvc.UI
@model ABB.Web.Modules.RoleRoute.Models.EditRoleRouteModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@addTagHelper *, ABB.Web
@{
    ViewData["Title"] = "Role Page";
}

<script src="~/Modules/RoleRoute/JS/roleRoute.edit.js"></script>
<form id="RouteForm" enctype="multipart/form-data">
    <div class="window-body">
        <div class="col-sm-12">
            <div class="form-group">
                @Html.HiddenFor(m => m.RoleId)
                <label asp-for="RoleName"></label>
                <kendo-textbox for="RoleName" readonly="true" />
            </div>
            <br />
            <div class="form-group">
                <div class="offset-md-5 col-md-4">
                    <input type="text" class="search-field-top " style="height:23px" id="SearchKeywordAction" placeholder="Search" />
                </div>
            </div>

            <div class="form-group">
                <input type="hidden" id="Routes"  value='@Html.Raw(Json.Serialize(Model.Routes))' />
                <vc:controller-action-list model="Model.Routes" />
            </div>
        </div>
    </div>
    <div class="window-footer">
        <button type="button" id="btn-edit-roleRoute" class="btn btn-primary space-right">Save</button>
    </div>
</form>
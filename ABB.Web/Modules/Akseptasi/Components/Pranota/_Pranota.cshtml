@using ABB.Application.Akseptasis.Queries
@using Kendo.Mvc.UI

<script src="~/Modules/Akseptasi/Components/Pranota/pranota.js"></script>

<style>
    .flat-btn-primary{
        padding: 10px 0px;
    }
</style>

<div class="window-body">
    <div class="row">
        <div class="col-md-4">
            <input type="text" class="search-field-top" style="height: 1em" id="SearchKeywordPranota" placeholder="Search"/>
        </div>
        <div class="offset-2"></div>
        <div class="col-md-2">
            <button class="flat-btn-primary" style="height: 1em" id="btnRecalculatePremi">Recalculate Premi</button>
        </div>
    </div>
    
    @(Html.Kendo().Grid<AkseptasiPranotaDto>()
        .Name("AkseptasiPranotaGrid")
        .DataSource(dataSource => dataSource.Ajax()
            .Read(read => read.Action("GetAkseptasiPranotas", "Akseptasi").Data("searchFilterPranota"))
            .Model(model => model.Id(p => p.Id))
        )
        .Columns(columns =>
        {
            columns.Bound(col => col.nm_mtu).Width(150).Title("Mata Uang");
            columns.Bound(col => col.nilai_prm).Width(150).Title("Premi");
            columns.Bound(col => col.nilai_dis).Width(150).Title("Diskon");
            columns.Bound(col => col.nilai_kms).Width(150).Title("Komisi");
            columns.Bound(col => col.nilai_kms_reas).Width(150).Title("Komisi Reasuransi");
            columns.Bound(col => col.nilai_ttl_ptg).Width(150).Title("Total Pertanggungan");
            columns.Command(command =>
            {
                command.Custom("EditAkseptasiPranota")
                    .Text("Edit")
                    .IconClass("fa fa-pencil-alt")
                    .HtmlAttributes(new { title = "Edit" })
                    .Click("btnEditAkseptasiPranota_OnClick");
                command.Custom("DeleteAkseptasiPranota")
                    .Text("Delete")
                    .IconClass("k-icon k-i-delete")
                    .HtmlAttributes(new { title = "Delete" })
                    .Click("btnDeleteAkseptasiPranota_OnClick");
            }).Width(200).Title("Action");
        })
        .Pageable(pager => pager
            .Refresh(true)
            .Info(true)
            .PageSizes(true)
        )
        .Sortable()
        .Filterable()
        .Scrollable()
        .Selectable()
        .Height(450)
        .Resizable(a => a.Columns(true))
        .Events(ev => ev.DataBound("gridAutoFit").Change("OnPranotaChange"))

        )
    
    <div class="window-footer">
        <button type="button" id="btn-next-akseptasiPranota" class="btn btn-primary space-right">
            Next <span class="fa fa-arrow-right"></span>
        </button>
    </div>
</div>
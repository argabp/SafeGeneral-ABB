                    <div class="col-sm-6">
                        <kendo-dropdownlist for="stn_rate_std" style="width: 100%"
                                            datavaluefield="Value" datatextfield="Text" filter="FilterType.Contains">
                            <datasource type="DataSourceTagHelperType.Custom">
                                <transport>
                                    <read url="@Url.Action("GetRatePremi", "Akseptasi")"/>
                                </transport>
                            </datasource>
                        </kendo-dropdownlist>
                    </div>
                </div>
                <div class="col-sm-3">
                    <kendo-numerictextbox spinners="false" decimals="2" for="nilai_prm_std" on-change="OnNilaiPrmStdChange" style="width: 100%"/>
                </div>
            </div>

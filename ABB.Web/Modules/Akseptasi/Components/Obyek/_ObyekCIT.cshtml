@using ABB.Application.Akseptasis.Queries
@using Kendo.Mvc.UI

<script src="~/Modules/Akseptasi/Components/Obyek/obyekCIT.js"></script>

<div class="window-body">
    <div class="row">
        <div class="col-md-4">
            <input type="text" class="search-field-top" style="height: 1em" id="SearchKeywordObyekCIT" placeholder="Search"/>
        </div>
        <div class="offset-1"></div>
        <div class="col-md-2">
            <button class="flat-btn-primary" style="height: 1em" id="btnAddNewAkseptasiObyekCIT">Add New Obyek</button>
        </div>
    </div>
    
    @(Html.Kendo().Grid<AkseptasiObyekCITDto>()
        .Name("AkseptasiObyekGrid")
        .DataSource(dataSource => dataSource.Ajax()
            .Read(read => read.Action("GetAkseptasiObyekCITs", "Akseptasi").Data("searchFilterObyekCIT"))
            .Model(model => model.Id(p => p.no_oby))
        )
        .Columns(columns =>
        {
            columns.Command(command =>
            {
                command.Custom("EditAkseptasiObyekCIT")
                    .Text("Edit")
                    .IconClass("fa fa-pencil-alt")
                    .HtmlAttributes(new { title = "Edit" })
                    .Click("btnEditAkseptasiObyekCIT_OnClick");
                command.Custom("DeleteAkseptasiObyekCIT")
                    .Text("Delete")
                    .IconClass("k-icon k-i-delete")
                    .HtmlAttributes(new { title = "Delete" })
                    .Click("btnDeleteAkseptasiObyekCIT_OnClick");
            }).Width(200).Locked(true).Title("Action");
            columns.Bound(col => col.no_oby).Width(150).Title("Nomor Obyek");
            columns.Bound(col => col.nm_asal).Width(250).Title("Asal");
            columns.Bound(col => col.ket_tujuan).Width(150).Title("Tujuan");
            columns.Bound(col => col.nilai_kas).Width(150).Title("Nilai Pertanggungan").Format("{0:n2}");
            columns.Bound(col => col.pst_rate).Width(150).Title("Rate").Format("{0:n2}");
        })
        .Pageable(pager => pager
            .Refresh(true)
            .Info(true)
            .PageSizes(true)
        )
        .Sortable()
        .Filterable()
        .AutoBind(false)
        .Scrollable()
        .Height(450)
        .Resizable(a => a.Columns(true))
        .Events(ev => ev.DataBound("gridAutoFit"))
    
        )
    
    <div class="window-footer">
        <button type="button" id="btn-previous-akseptasiResikoObyekCIT" class="btn btn-primary space-right">
            <span class="fa fa-arrow-left"></span> Previous
        </button>
        <button type="button" id="btn-next-akseptasiResikoObyekCIT" class="btn btn-primary space-right">
            Next <span class="fa fa-arrow-right"></span>
        </button>
    </div>
</div>
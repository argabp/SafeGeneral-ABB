@using Kendo.Mvc.UI
@using ABB.Application.LimitKlaims.Queries
@using Microsoft.Extensions.Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc

@inject IConfiguration Configuration

@{
    Layout = "~/Modules/Shared/_Layout.cshtml";
    ViewData["Title"] = "Setup Limit Klaim";
}
<script src="~/Modules/LimitKlaim/JS/limitKlaim.index.js"></script>

<style>
    .div-box{
        padding-bottom: 1em;
    }
</style>

<div class="flat-box">
    <div class="row">
        <div class="flat-box-title col-md-6">
            Setup Limit Klaim
        </div>
        <div class="col-md-4">
            <input type="text" class="search-field-top " id="SearchKeyword" placeholder="Search"/>
        </div>
        <div class="col-md-2">
            <button class="flat-btn-primary" onclick="btnAddLimitKlaim()">Add Limit Klaim</button>
        </div>
    </div>

    <div class="flat-box-content">
        <div class="div-box">
            @(Html.Kendo().Grid<LimitKlaimDto>()
                .Name("LimitKlaimGrid")
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetLimitKlaims", "LimitKlaim").Data("searchFilter"))
                    .Model(model => model.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Command(command =>
                    {
                        command.Custom("EditLimitKlaim")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .HtmlAttributes(new { title = "Edit" })
                            .Click("btnEditLimitKlaim");
                        command.Custom("DeleteLimitKlaim")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .HtmlAttributes(new { title = "Delete" })
                            .Click("onDeleteLimitKlaim");
                    }).Width(200).Title("Action");
                    columns.Bound(col => col.nm_cb).Title("Nama Cabang").Width(150);
                    columns.Bound(col => col.nm_cob).Title("Nama COB");
                    columns.Bound(col => col.nm_scob).Title("Nama Sub COB");
                    columns.Bound(col => col.thn).Title("Tahun");
                    columns.Bound(col => col.nm_limit).Title("Nama Limit Klaim");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .ClientDetailTemplateId("template")
                .Sortable()
                .Filterable()
                .Scrollable()
                .Height(450)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
        
                )    
        </div>
        
        <script id="template" type="text/kendo-tmpl">
            <div class="row">
                <div class="col-md-4 k-button k-button-icontext">
                    <button style="border: none;" onclick="btnAddLimitKlaimDetail('#=kd_cb#', '#=kd_cob#', '#=kd_scob#', '#=thn#')">+ ADD NEW RECORD</button>
                </div>
            </div>
            @(Html.Kendo().Grid<LimitKlaimDetilDto>()
                .Name("grid_Detail_#=Id#") // template expression, to be evaluated in the master context
                .DataSource(dataSource => dataSource.Ajax()
                    .Read(read => read.Action("GetLimitKlaimDetails", "LimitKlaim", new { kd_cb = "#=kd_cb#", kd_cob = "#=kd_cob#", kd_scob = "#=kd_scob#", thn = "#=thn#" }))//.Data("getAsumsiPeriodeParam"))
                    .Model(m => m.Id(p => p.Id))
                )
                .Columns(columns =>
                {
                    columns.Bound(col => col.nm_user).Title("Nama User");
                    columns.Bound(col => col.nilai_limit_awal).Title("Nilai Limit Awal (%)");
                    columns.Bound(col => col.nilai_limit_akhir).Title("Nilai Limit Akhir (%)");
                    columns.Command(command =>
                    {
                        command.Custom("EditLimitKlaimDetil")
                            .Text("Edit")
                            .IconClass("fa fa-pencil-alt")
                            .HtmlAttributes(new { title = "Edit" })
                            .Click("btnEditLimitKlaimDetil");
                        command.Custom("DeleteLimitKlaimDetail")
                            .Text("Delete")
                            .IconClass("k-icon k-i-delete")
                            .HtmlAttributes(new { title="Delete"})
                            .Click("onDeleteLimitKlaimDetail");
                    }).Width(200).Title("Action");
                })
                .Pageable(pager => pager
                    .Refresh(true)
                    .Info(true)
                    .PageSizes(true)
                )
                .Sortable()
                .Selectable()
                .Filterable()
                .Scrollable()
                .Height(380)
                .Resizable(a=>a.Columns(true))
                .Events(ev => ev.DataBound("gridAutoFit"))
                .ToClientTemplate())
        </script>

        @(Html.Kendo().Window()
            .Name("LimitKlaimWindow")
            .Title("LimitKlaim")
            .Width(500)
            .Modal(true)
            .Visible(false)
            .Draggable(true)
            )
    </div>
</div>


@using Kendo.Mvc.TagHelpers
@using Kendo.Mvc.UI
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ABB.Web.Modules.SCOB.Models.SCOBViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@{
    ViewData["Title"] = "SCOB Page";
}

<script src="~/Modules/SCOB/JS/scob.edit.js"></script>

<form id="SCOBForm" enctype="multipart/form-data">
    <div class="window-body" style="background-color: lightgray">

        <div class="form-group">
            <label asp-for="kd_cob" class="col-sm-12" style="align-content: center">Kode COB</label>
            <div class="col-sm-12">
                <kendo-dropdownlist for="kd_cob" option-label="Please Choose COB" filter="FilterType.Contains"
                                    datavaluefield="Value" datatextfield="Text" readonly="true" class="primary-dropdown">
                    <datasource type="DataSourceTagHelperType.Custom">
                        <transport>
                            <read url="@Url.Action("GetCOBs","SCOB")" />
                        </transport>
                    </datasource>
                </kendo-dropdownlist>
                <span asp-validation-for="kd_cob" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="kd_scob" class="col-sm-12" style="align-content: center">Kode Sub COB</label>
            <div class="col-sm-12">
                <kendo-textbox for="kd_scob" readonly="true" style="background-color: #00FFFF"/>
                <span asp-validation-for="kd_scob" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="nm_scob" class="col-sm-12" style="align-content: center">Nama Sub COB</label>
            <div class="col-sm-12">
                <kendo-textbox for="nm_scob" style="background-color: #FFFFE1"/>
                <span asp-validation-for="nm_scob" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="nm_scob_ing" class="col-sm-12" style="align-content: center">Nama Sub COB (English)</label>
            <div class="col-sm-12">
                <kendo-textbox for="nm_scob_ing" style="background-color: #FFFFE1"/>
                <span asp-validation-for="nm_scob_ing" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="kd_sub_grp" class="col-sm-12" style="align-content: center">Sub Group COB</label>
            <div class="col-sm-12">
                <kendo-textbox for="kd_sub_grp"/>
                <span asp-validation-for="kd_sub_grp" class="text-danger"></span>
            </div>
        </div>

    </div>
    <div class="window-footer">
        <button type="button" id="btn-edit-scob" class="btn btn-primary space-right">Save</button>
    </div>
</form>